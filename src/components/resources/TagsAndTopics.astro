---
interface Props {
  tags?: string[];
  relatedTopics?: string[];
}

const { tags = [], relatedTopics = [] } = Astro.props;
---

{(tags.length > 0 || relatedTopics.length > 0) && (
  <div class="tags-and-topics-container">
    {tags.length > 0 && (
      <section class="tags-section">
        <h3 class="section-title">
          üè∑Ô∏è Etiquetas
        </h3>
        <div class="tags-wrapper">
          {tags.map((tag) => (
            <span class="tag-item tag-blue">
              {tag}
            </span>
          ))}
        </div>
      </section>
    )}
    
    {relatedTopics.length > 0 && (
      <section class="topics-section">
        <h3 class="section-title">
          üîó Temas Relacionados
        </h3>
        <div class="topics-wrapper">
          {relatedTopics.map((topic) => (
            <span class="topic-item tag-green">
              {topic}
            </span>
          ))}
        </div>
      </section>
    )}
  </div>
)}

<style>
  .tags-and-topics-container {
    display: flex;
    flex-direction: column;
    gap: 24px; /* space-y-6 */
    margin-bottom: 32px; /* mb-8 */
  }

  .tags-section,
  .topics-section {
    position: relative;
  }

  .section-title {
    font-size: 1.125rem; /* text-lg */
    font-weight: 600; /* font-semibold */
    color: #111827; /* text-gray-900 */
    margin-bottom: 12px; /* mb-3 */
    display: flex;
    align-items: center;
    gap: 8px;
    line-height: 1.4;
  }

  .tags-wrapper,
  .topics-wrapper {
    display: flex; /* flex */
    flex-wrap: wrap; /* flex-wrap */
    gap: 8px;
  }

  .tag-item,
  .topic-item {
    display: inline-block; /* inline-block */
    padding: 4px 12px; /* px-3 py-1 */
    font-size: 0.75rem; /* text-xs */
    font-weight: 500; /* font-medium */
    border-radius: 9999px; /* rounded-full */
    margin-right: 8px; /* mr-2 */
    margin-bottom: 8px; /* mb-2 */
    transition: all 0.2s ease;
    cursor: default;
    position: relative;
    overflow: hidden;
  }

  .tag-blue {
    background-color: #dbeafe; /* bg-blue-100 */
    color: #1e40af; /* text-blue-800 */
    border: 1px solid rgba(30, 64, 175, 0.2);
  }

  .tag-green {
    background-color: #dcfce7; /* bg-green-100 */
    color: #166534; /* text-green-800 */
    border: 1px solid rgba(22, 101, 52, 0.2);
  }

  /* Enhanced hover effects */
  .tag-item:hover,
  .topic-item:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.12);
  }

  .tag-blue:hover {
    background-color: #bfdbfe;
    color: #1d4ed8;
  }

  .tag-green:hover {
    background-color: #bbf7d0;
    color: #15803d;
  }

  /* Shimmer effect on hover */
  .tag-item::before,
  .topic-item::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.4), transparent);
    transition: left 0.5s ease;
  }

  .tag-item:hover::before,
  .topic-item:hover::before {
    left: 100%;
  }

  /* Section animations */
  .tags-section,
  .topics-section {
    animation: fadeInUp 0.6s ease-out;
  }

  .topics-section {
    animation-delay: 0.1s;
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Staggered animation for tags */
  .tag-item:nth-child(1),
  .topic-item:nth-child(1) { animation-delay: 0.1s; }
  .tag-item:nth-child(2),
  .topic-item:nth-child(2) { animation-delay: 0.15s; }
  .tag-item:nth-child(3),
  .topic-item:nth-child(3) { animation-delay: 0.2s; }
  .tag-item:nth-child(4),
  .topic-item:nth-child(4) { animation-delay: 0.25s; }
  .tag-item:nth-child(5),
  .topic-item:nth-child(5) { animation-delay: 0.3s; }

  .tag-item,
  .topic-item {
    animation: slideIn 0.4s ease-out forwards;
    opacity: 0;
    transform: scale(0.8);
  }

  @keyframes slideIn {
    to {
      opacity: 1;
      transform: scale(1);
    }
  }

  /* Additional color variants */
  .tag-purple {
    background-color: #f3e8ff;
    color: #7c3aed;
    border: 1px solid rgba(124, 58, 237, 0.2);
  }

  .tag-purple:hover {
    background-color: #e9d5ff;
    color: #6d28d9;
  }

  .tag-orange {
    background-color: #fed7aa;
    color: #ea580c;
    border: 1px solid rgba(234, 88, 12, 0.2);
  }

  .tag-orange:hover {
    background-color: #fdba74;
    color: #dc2626;
  }

  .tag-pink {
    background-color: #fce7f3;
    color: #be185d;
    border: 1px solid rgba(190, 24, 93, 0.2);
  }

  .tag-pink:hover {
    background-color: #fbcfe8;
    color: #a21caf;
  }

  /* Responsive breakpoints */
  @media (max-width: 768px) {
    .tags-and-topics-container {
      gap: 20px;
      margin-bottom: 24px;
    }

    .section-title {
      font-size: 1rem;
      margin-bottom: 10px;
    }

    .tags-wrapper,
    .topics-wrapper {
      gap: 6px;
    }

    .tag-item,
    .topic-item {
      padding: 6px 10px;
      font-size: 0.8125rem;
      margin-right: 6px;
      margin-bottom: 6px;
    }
  }

  @media (max-width: 480px) {
    .tags-and-topics-container {
      gap: 16px;
      margin-bottom: 20px;
    }

    .section-title {
      font-size: 0.9375rem;
      margin-bottom: 8px;
    }

    .tag-item,
    .topic-item {
      padding: 4px 8px;
      font-size: 0.75rem;
      margin-right: 4px;
      margin-bottom: 4px;
    }
  }

  /* Accessibility improvements */
  @media (prefers-reduced-motion: reduce) {
    .tag-item,
    .topic-item,
    .tags-section,
    .topics-section,
    .tag-item::before,
    .topic-item::before {
      animation: none;
      transition: none;
    }

    .tag-item:hover,
    .topic-item:hover {
      transform: none;
    }
  }

  /* High contrast mode support */
  @media (prefers-contrast: high) {
    .tag-blue {
      background-color: #dbeafe;
      color: #1e3a8a;
      border: 2px solid #1e40af;
    }

    .tag-green {
      background-color: #dcfce7;
      color: #14532d;
      border: 2px solid #166534;
    }

    .section-title {
      color: #000000;
      font-weight: 700;
    }
  }

  /* Dark mode support */
  /* @media (prefers-color-scheme: dark) {
    .section-title {
      color: #f9fafb;
    }

    .tag-blue {
      background-color: rgba(30, 64, 175, 0.2);
      color: #00c5f0;
      border-color: rgba(147, 197, 253, 0.3);
    }

    .tag-blue:hover {
      background-color: rgba(30, 64, 175, 0.3);
      color: #bfdbfe;
    }

    .tag-green {
      background-color: rgba(22, 101, 52, 0.2);
      color: #86efac;
      border-color: rgba(134, 239, 172, 0.3);
    }

    .tag-green:hover {
      background-color: rgba(22, 101, 52, 0.3);
      color: #bbf7d0;
    }
  } */

  /* Print styles */
  @media print {
    .tags-and-topics-container {
      margin-bottom: 16px;
    }

    .tag-item,
    .topic-item {
      background-color: transparent !important;
      color: #000000 !important;
      border: 1px solid #666666 !important;
      box-shadow: none !important;
      transform: none !important;
    }

    .section-title {
      color: #000000 !important;
      font-size: 1rem;
      margin-bottom: 8px;
    }
  }

  /* Focus states for accessibility */
  .tag-item:focus,
  .topic-item:focus {
    outline: 2px solid #3b82f6;
    outline-offset: 2px;
  }

  /* Loading skeleton for dynamic content */
  .tag-item:empty,
  .topic-item:empty {
    background: linear-gradient(90deg, #e5e7eb 25%, #f3f4f6 50%, #e5e7eb 75%);
    background-size: 200% 100%;
    animation: skeleton-loading 1.5s infinite;
    color: transparent;
    min-width: 60px;
    height: 24px;
  }

  @keyframes skeleton-loading {
    0% {
      background-position: 200% 0;
    }
    100% {
      background-position: -200% 0;
    }
  }
</style>
