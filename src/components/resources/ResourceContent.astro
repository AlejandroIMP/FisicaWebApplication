  /* Accessibility improvements */
  @media (prefers-reduced-motion: reduce) {
    .resource-content img,
    .resource-content a {
      transition: none;
    }

    .resource-content img:hover {
      transform: none;
    }
  }

  /* High contrast mode support */
  @media (prefers-contrast: high) {
    .resource-content {
      color: black;
    }

    .resource-content h1,
    .resource-content h2,
    .resource-content h3,
    .resource-content h4,
    .resource-content h5,
    .resource-content h6 {
      color: black;
    }

    .resource-content a {
      color: #0000ee;
      text-decoration: underline;
    }

    .resource-content blockquote {
      border-color: #000000;
      background-color: #f0f0f0;
    }

    .resource-content code,
    .resource-content pre {
      background-color: #f0f0f0;
      border: 2px solid #000000;
    }
  }

  /* Selection styling */
  .resource-content ::selection {
    background-color: #dbeafe;
    color: #1e40af;
  }

  .resource-content ::-moz-selection {
    background-color: #dbeafe;
