  } */

  /* Print styles */
  @media print {
    .related-resources {
      background: white;
      padding: 20px 0;
    }

    .related-resources-grid {
      display: block;
    }

    .related-resource-card {
      box-shadow: none;
      border: 1px solid #d1d5db;
      margin-bottom: 20px;
      break-inside: avoid;
      padding: 16px;
    }

    .resource-image {
      height: auto;
      max-height: 100px;
    }

    .related-resource-link {
      color: #000000;
      text-decoration: none;
    }

    .related-resource-link::after {
      content: " (" attr(href) ")";
      font-size: 0.75rem;
      color: #666666;
    }

    .link-icon {
      display: none;
    }
  }

  /* Focus states for keyboard navigation */
  .related-resource-card:focus-within {
    outline: 2px solid #3b82f6;
    outline-offset: 2px;
  }
</style>
