---
export interface Props {
  title: string;
  description: string;
  icon?: string;
}

const { title, description, icon } = Astro.props;
---
<div class="calculator-header">
  <div class="header-content">
    {icon && <span class="header-icon">{icon}</span>}
    <div>
      <h2>{title}</h2>
      <p>{description}</p>
    </div>
  </div>
</div>

<style>
  .calculator-header {
    background: linear-gradient(135deg, var(--accent-dark), #1E40AF);
    color: white;
    padding: 1.5rem;
  }
  
  .header-content {
    display: flex;
    align-items: center;
    gap: 1rem;
  }
  
  .header-icon {
    font-size: 1.8rem;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  h2 {
    color: white;
    margin: 0;
    font-size: 1.8rem;
  }
  
  p {
    margin: 0.5rem 0 0;
    opacity: 0.9;
    font-size: 1rem;
  }
</style>
