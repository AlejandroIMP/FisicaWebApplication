            placeholder="Ingresa el coeficiente"
            units={UNITS.coefficient}
          />
          <InputGroup 
            id="friction-force"
            label="Fuerza de fricci칩n (Ff):"
            placeholder="Ingresa la fuerza de fricci칩n"
